<style>
  /* Base animations */
  .social-card {
    animation: fadeIn 0.5s ease-out forwards;
    opacity: 0;
    box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
  }
  
  /* Fix for mobile username display */
  .social-card .flex.items-center.gap-2,
  .social-card .flex.items-center.gap-3 {
    width: 100%;
  }
  
  .social-card .flex.items-center.gap-2 > div:nth-child(2),
  .social-card .flex.items-center.gap-3 > div:nth-child(2) {
    min-width: 0;
    flex: 1;
    overflow: hidden;
  }
  
  /* Button container fix */
  .social-card .ml-auto.flex.items-center {
    width: auto;
    white-space: nowrap;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Staggered animation delay for each card */
  .social-card:nth-child(1) { animation-delay: 0.1s; }
  .social-card:nth-child(2) { animation-delay: 0.2s; }
  .social-card:nth-child(3) { animation-delay: 0.3s; }
  .social-card:nth-child(4) { animation-delay: 0.4s; }
  .social-card:nth-child(5) { animation-delay: 0.5s; }

  /* Icon animations */
  .card-icon {
    transition: all 0.3s ease;
  }
  
  .social-card:hover .card-icon {
    transform: scale(1.1) rotate(5deg);
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.05);
    }
  }
</style>


