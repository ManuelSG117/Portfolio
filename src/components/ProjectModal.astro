---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<dialog 
  id={id} 
  class="m-4 sm:m-auto backdrop:bg-black/50 backdrop:backdrop-blur-sm max-w-2xl w-[calc(100%-2rem)] sm:w-full rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 bg-white/95 dark:bg-gray-800 transition-all duration-300 overflow-auto max-h-[90vh]"
>
  <div class="flex flex-col">
    <!-- Header con botÃ³n de cierre - reducido el padding y eliminado el fondo diferente -->
    <div class="flex justify-end p-1 sticky top-0 z-10">
      <button
        class="p-1 text-gray-500 hover:text-gray-600 dark:text-gray-500 dark:hover:text-gray-300 transition-colors"
        data-close-modal
      >
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-5 w-5" 
          fill="none"
          viewBox="0 0 24 24" 
          stroke="currentColor"
          stroke-width="2"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
        <span class="sr-only">Cerrar</span>
      </button>
    </div>

    <!-- Contenido del modal -->
    <div class="p-4 pt-0">
      <slot />
    </div>
  </div>
</dialog>